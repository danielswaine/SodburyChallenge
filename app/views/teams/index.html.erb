<% provide(:title, "Teams List") %>

<div class="row">
  <div class="col-md-2">
    <%= link_to raw("<span class=\"glyphicon glyphicon-plus\"></span> New Team"), new_team_path, :class=>'btn btn-success' %>
  </div>
</div>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Year</th>
      <th>Team No.</th>
      <th>Name</th>
      <th>Route</th>
      <th>Score</th>
      <th>Start Time</th>
      <th>Due End Time</th>
      <th>End Time</th>
      <th>Due Phone in Time</th>
      <th>Phone in Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_year %></td>
        <td><%= team.team_number %></td>
        <td><%= team.name %></td>
        <td><%= team.route_id %></td>
        <td><%= team.score %></td>
        <td><%= team.start_time %></td>
        <td><%= team.due_end_time %></td>
        <td><%= team.end_time %></td>
        <td><%= team.due_phone_in_time %></td>
        <td><%= team.phone_in_time %></td>
        <!--<td><%= link_to 'Show', team %></td>-->
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
