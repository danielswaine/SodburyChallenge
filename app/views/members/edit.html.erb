<% provide(:title, "Edit Member") %>

<%= form_for(@member) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-3 vspace">
      <%= f.submit "Save Member", :class=>'btn btn-primary' %>
    </div>
    <div class="col-md-3 vspace">
      <%= link_to "Cancel", members_path, class: 'btn btn-block btn-default' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 vspace">
      <hr />
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 vspace">
      <%= link_to "Remove Member", @member, method: :delete, class: 'btn btn-group-justified btn-danger' %>
    </div>
  </div>
<% end %>
