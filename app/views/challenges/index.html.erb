<% provide(:title, 'Manage Challenges') %>

<div class="row">
  <div class="col-md-12">
    <p>Each challenge is associated with a list of goal checkpoints and a set of
       participating teams.</p>
  </div>
</div>

<div class="row">
  <div class="col-md-12 col-xs-12 wide-table">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Challenge Date</th>
          <th>Time Allowed</th>
          <th>Participating Teams</th>
          <th>Goals</th>
          <th>Points Available</th>
          <th>Route</th>
          <th>Scores</th>
          <th>Statistics</th>
        </tr>
      </thead>
      <tbody>
        <%= render @challenges %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <%= link_to raw("<span class=\"glyphicon glyphicon-plus\"></span> New Challenge"), new_challenge_path, :class=>'btn btn-block btn-success' %>
  </div>
</div>
