<tr>
  <td><%= challenge.date.strftime("%-d %B %Y") %></td>
  <td><%= challenge.time_allowed %> hours</td>
  <td><%= challenge.teams.size %></td>
  <td><%= challenge.goals.size %></td>
  <td><%= points_available(challenge) %></td>
  <td><%= link_to challenge.published ? "View" : "Manage", challenge_path(challenge) %></td>
  <% if challenge.published? %>
    <td>
      <%= link_to "View", results_path %>
    </td>
  <% else %>
  <td><%= link_to "Publish", publish_path(challenge), method: :patch,
    data: { confirm: "Publish results for the #{challenge.time_allowed} hour challenge? " \
                     "Published routes and scores cannot be edited." } %>
  </td>
  <% end %>
  <td><%= link_to "View", statistics_path(challenge) %></td>
</tr>
