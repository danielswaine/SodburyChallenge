<tr>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.created_at.strftime("%-d %B %Y") %></td>
  <td>
    <% if current_user?(user) %>
      <%= link_to "Manage", edit_user_path(user) %>
    <% else %>
      <%= link_to "Remove", user, method: :delete,
                                  data: { confirm: "Remove #{user.name}? This cannot be undone." } %>
    <% end %>
  </td>
</tr>
